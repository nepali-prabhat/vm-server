// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Inventory {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  price     Float
  stock     Int
  imageName String?
  order     Order[]
}

model FundStock {
  fundType String @id
  stock    Float
}

model Order {
  id          Int         @id @default(autoincrement())
  inventory   Inventory   @relation(fields: [inventoryId], references: [id])
  inventoryId Int
  status      OrderStatus @default(PENDING)

  purchase Purchase?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum OrderStatus {
  PENDING
  SUCCESS
  CANCELLED
  TIMEOUT
  OUT_OF_COINS
  OUT_OF_CASH
  OUT_OF_STOCK
}

model Purchase {
  id      Int   @id @default(autoincrement())
  order   Order @relation(fields: [orderId], references: [id])
  orderId Int   @unique
  coins   Int?  @default(0)
  cash    Int?  @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
